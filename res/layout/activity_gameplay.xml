<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/bg_horizontal_margin"
    android:paddingRight="@dimen/bg_horizontal_margin"
    android:paddingTop="@dimen/bg_vertical_margin"
    android:paddingBottom="@dimen/bg_vertical_margin"
    tools:context="nl.mprog.hangman.app.GameplayActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/jesus_base_crop"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="240dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="180dp"
            android:id="@+id/imageView4"
            android:src="@drawable/rope_crop"
            android:layout_alignTop="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/kenny_crop"
            android:layout_marginBottom="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/textView"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    
    <LinearLayout
		android:id="@+id/word"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:background="#FFFFFFFF"
		android:gravity="center"
		android:layout_above="@+id/letters"
		android:orientation="horizontal"
		android:padding="10dp" >
	</LinearLayout>
    
    <GridView
		android:id="@+id/letters"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="354dp"
		android:background="#FF000000"
		android:horizontalSpacing="5dp"
		android:numColumns="7"
		android:padding="5dp"
		android:stretchMode="columnWidth"
		android:verticalSpacing="5dp" />

</RelativeLayout>
